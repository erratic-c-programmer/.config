# output HDMI-A-2 scale 1.1
output HDMI-A-2 mode 1920x1080@71.910004Hz pos 0 0
output eDP-1 position 1920 280

input "type:keyboard" {
	xkb_layout us,de
	xkb_options ctrl:nocaps,compose:ralt
}

